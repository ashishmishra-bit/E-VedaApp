<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_prabandham">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desikar Mangala Shaasanam"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/desiBtn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView10"
                android:layout_toRightOf="@+id/imageView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shaattumorai"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/shaattuBtn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView11"
                android:layout_toRightOf="@+id/imageView11"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView12"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thirupallandu"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/pallanduBtn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView12"
                android:layout_toRightOf="@+id/imageView12"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thirupalli Yelluchi"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/thirupalliBtn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView13"
                android:layout_toRightOf="@+id/imageView13"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView14"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kannanin Shirutthambu"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/kanninBtn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView14"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/folderimg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiruppavai (Volume 1)"
                android:id="@+id/ty1Btn"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/folderimg"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiruppavai (Volume 2)"
                android:id="@+id/ty2Btn"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/folderimg"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiruppavai (Volume 3)"
                android:id="@+id/ty3Btn"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>